{
    "name": "trustfundsolidity",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npx hardhat compile --show-stack-traces",
        "clean": "npx hardhat clean --show-stack-traces",
        "local-testnet: NO DEPLOY (FORKED)": "npx hardhat node --no-deploy --show-stack-traces",
        "local-testnet: DEPLOY ALL (NON FORKED)": "npx hardhat node --show-stack-traces --export ./export/non-forked.contract-export.json",
        "local-testnet-upgradeable": "node scripts/environment/local-testnet.js",
        "test: light": "npx hardhat test --show-stack-traces",
        "test: TrustFund": "npx hardhat test test/trustfund/TrustFund-tests.ts --show-stack-traces",
        "deploy: LOCALHOST": "npx hardhat deploy --network localhost --show-stack-traces",
        "deploy: HARDHAT": "npx hardhat deploy --network hardhat --show-stack-traces",
        "deploy: MUMBAI TRUSTFUND": "npx hardhat deploy --network mumbai --tags TrustFund",
        "verify-contract: MUMBAI": "npx hardhat verify CONTRACT_ADDR --network mumbai",
        "solhint": "./node_modules/.bin/solhint -f table ./contracts/*.sol",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prettier:solidity": " ./node_modules/.bin/prettier --write contracts/*.sol",
        "typechain:generate": "typechain --target=ethers-v5 ./abi/**/*.json --out-dir=types/ --show-stack-traces",
        "coverage: ALL": "npx hardhat coverage --testfiles test/**/*.ts --show-stack-traces",
        "size-contracts": "npx hardhat size-contracts --show-stack-traces"        
    },
    "author": "Jonathan Emig",
    "license": "ISC",
    "devDependencies": {
        "@ethersproject/abi": "^5.7.0",
        "@ethersproject/providers": "^5.7.2",
        "@gnosis.pm/safe-core-sdk": "^2.1.0",
        "@gnosis.pm/safe-core-sdk-types": "^1.1.0",
        "@gnosis.pm/safe-ethers-adapters": "^0.1.0-alpha.9",
        "@gnosis.pm/safe-ethers-lib": "^1.1.0",
        "@gnosis.pm/safe-service-client": "^1.1.2",
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
        "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
        "@nomiclabs/hardhat-etherscan": "^3.1.5",
        "@typechain/ethers-v5": "^10.2.0",
        "@typechain/hardhat": "^6.1.5",
        "@types/mocha": "^10.0.1",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "chai": "^4.3.7",
        "chai-ethers": "^0.0.1",
        "dotenv": "^16.0.3",
        "eslint": "^8.31.0",
        "ethers": "^5.7.2",
        "hardhat": "^2.12.6",
        "hardhat-deploy": "^0.11.22",
        "hardhat-gas-reporter": "^1.0.9",
        "mocha": "^10.2.0",
        "prettier": "^2.8.2",
        "prettier-plugin-solidity": "^1.1.1",
        "prisma": "^4.8.1",
        "solhint": "^3.3.7",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8.2",
        "ts-node": "^10.9.1",
        "typechain": "^8.1.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@openzeppelin/contracts": "~4.8.0",
        "@openzeppelin/contracts-upgradeable": "~4.8.0",
        "@openzeppelin/upgrades-core": "^1.20.6",
        "@prisma/client": "^4.8.1",
        "axios": "^1.3.3",
        "csv-stringify": "^6.2.3",
        "hardhat-contract-sizer": "^2.6.1",
        "keccak256": "^1.0.6",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "merkletreejs": "^0.3.9",
        "node-fetch": "^3.3.0"
    }
}
